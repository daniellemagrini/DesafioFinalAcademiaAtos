@model Login
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>

<html lang="pt-br">  <!--Idioma Português-Brasil-->

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>login</title>

    <!-- Link estilo Bootstrap-->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Link estilo css-->
    <link rel="stylesheet" type="text/css" href="/css/site.css"/>

    <!-- JavaScript -->
    <script src="/js/site.js" defer></script>

</head>  

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-danger" role: "alert">@TempData["MensagemSucesso"]</div>
}

<body>    
<section class="vh-100" style="margin: auto">
    <div class="container-sm">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                  <div class="col-md-6 col-lg-5 d-none d-md-block" style="width 100%">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                      alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                  </div>
                  <div class="col-md-6 col-lg-7 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black"> 
      
                      <form asp-controller="Login" asp-action="FazerLogin" method="post">
      
                        <div class="d-flex align-items-center mb-3 pb-1">
                          <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                          <span class="h1 fw-bold mb-0" style="margin: auto ">RH Treinamento</span>
                        </div>
      
                        <h5 class="fw-normal mb-3 pb-2" style="letter-spacing: 1px;">Entre em sua conta</h5>
      
                        <div class="form-outline mb-4">
                          <input type="email" asp-for="login" id="login" class="form-control form-control-lg" />
                          <label class="form-label" for="login">Endereço de email</label>
                          <span style="color: red">@Html.ValidationMessageFor(x => x.login)</span>
                        </div>
      
                        <div class="form-outline mb-4">
                          <input type="password" asp-for="senha" id="senha" class="form-control form-control-lg" />                         
                          <label class="form-label" for="senha">Senha</label>
                          <span style="color: red">@Html.ValidationMessageFor(x => x.senha)</span>
                        </div>
      
                        <div class="pt-1 mb-4">
                          <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                        </div>
                        @if (TempData["MensagemErro"] != null)
                        {
                            <div>
                                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                                @TempData["MensagemErro"]
                            </div>
                        }
                        <a class="small text-muted" asp-action="RedefinirSenha">Esqueceu sua senha?</a>
                        <p class="mb-5 pb-lg-2">Ainda não tem uma conta? <a asp-controller="Usuarios" asp-action="Create" class="btn btn-link"
                            style="color: #3241e6;">Cadastrar aqui</a></p>
                        <a href="#!" class="small text-muted">Terms of use.</a>
                        <a href="#!" class="small text-muted">Privacy policy</a>
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
  </section>
</body>
</html>